{
  "name": "httpmcp-server",
  "displayName": "HTTP MCP Server",
  "description": "在 VSCode 中启动 HTTP MCP 服务器，以当前工作目录为 MCP 工作目录",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "httpmcp.start",
        "title": "HTTP MCP: 启动服务器"
      },
      {
        "command": "httpmcp.stop",
        "title": "HTTP MCP: 停止服务器"
      },
      {
        "command": "httpmcp.copyAddress",
        "title": "HTTP MCP: 复制连接地址"
      },
      {
        "command": "httpmcp.openInspector",
        "title": "HTTP MCP: 打开 Inspector"
      }
    ],
    "configuration": {
      "title": "HTTP MCP Server",
      "properties": {
        "httpmcp.port": {
          "type": "number",
          "default": 3001,
          "description": "MCP 服务器端口"
        },
        "httpmcp.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "VSCode 启动时自动启动 MCP 服务器"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "fastmcp": "^3.32.0",
    "zod": "^3.23.8"
  }
}
