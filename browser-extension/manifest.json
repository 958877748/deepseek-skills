{
  "manifest_version": 3,
  "name": "DeepSeek Tools",
  "version": "1.0.0",
  "description": "为 DeepSeek 添加简单工具",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.deepseek.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["prompt.md"],
      "matches": ["https://chat.deepseek.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
