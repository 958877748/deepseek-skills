{
  "manifest_version": 3,
  "name": "DeepSeek Tools - MCP",
  "version": "2.0.0",
  "description": "通过 MCP 协议连接外部工具",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.deepseek.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": [
        "modules/mcp-client.js",
        "modules/prompt-generator.js",
        "modules/ui-components.js",
        "modules/action-handler.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["prompt.md"],
      "matches": ["https://chat.deepseek.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
